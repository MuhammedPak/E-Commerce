@using MyEcom.Common.RedisDto
@model List<UserHomePageDto>

@{
    var room = Model.Select(a => a.Room);
}


@section index{
    <script src="jquery-3.3.1.min.js"></script>
    <aside id="colorlib-hero" style="margin-bottom:0%">
        <div class="flexslider">
            <ul class="slides">
                @foreach (var item in Model)
                {

                    foreach (var image in item.Images)
                    {

                        <li style="background-image: url(http://localhost:54435/Content/images/@image.ImageName">
                            <a href="/Home/Hotel/@image.otelid">
                                <div class="overlay"></div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                                            <div class="slider-text-inner text-center">
                                                <h2>@item.Name</h2>
                                                <h1>@item.Country @item.City @item.Description</h1>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                        break;

                    }

                }

            </ul>
        </div>
    </aside>

}


<div class="row" style="margin-top:0%">
    <div class="wrap-division">

        @foreach (var db in Model.OrderBy(a => a.Id))
        {


            foreach (var r in db.Room)
            {


                <div class="col-md-6 col-sm-6 animate-box">
                    <div class="hotel-entry">

                        <a href="@Url.Action("Room","Home", new { RoomId =r.RoomId,Otel_id=db.Id})" class="hotel-img" style="background-image: url(http://localhost:54435/Content/images/@r.RoomImage);">
                            <p class="price"><span>$@r.Price</span><small> /night</small></p>
                        </a>
                        <div class="desc">
                            <p class="star"><span><i class="icon-star-full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i></span> 545 Reviews</p>
                            <h3><a href="hotel-room.html">@db.Name</a></h3>
                            <span class="place">@db.City, @db.Country</span>
                            <p>@db.Description</p>
                        </div>
                    </div>
                </div>


            }

        }

    </div>
</div>



