@using MyEcom.Common.RoomDto;
@model IEnumerable<HotelImageList>
@{
    ViewBag.Title = "HotelImages";
}
<!-- image-preview-input -->
<div class="clearfix">
    <div class="portlet-body form">
        <form class="form-horizontal" method="post" role="form" action="/Gallery/AddHotelImage" enctype="multipart/form-data">

            <div class="fileinput fileinput-new" data-provides="fileinput" ">

            </div><div class="btn btn-default image-preview-input ">
                <span class="glyphicon glyphicon-folder-open"></span>


                <input type="file" accept="image/png, image/jpeg, image/gif" required name="image" /> <span class="image-preview-input-title">Browse</span> <!-- rename it -->
                <div class="col-md-offset-3">
                    <button type="submit" class="btn green col-md-ofset-8 right fileinput-exists purple" style="margin-left:30%">Add Image</button>
                </div>
            </div>

        </form>
    </div>



    <div  class="portlet box purple col-lg-9" style="margin-top:3%">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>Horizontal Scrollable Responsive Table
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                <a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title=""> </a>
                <a href="javascript:;" class="reload" data-original-title="" title=""> </a>
                <a href="javascript:;" class="remove" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="text-align:center">Image </th>
                            <th style="text-align:center">Delete</th>
                        </tr>


                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <img src="~/Content/images/@item.ImageName" width="160px" height="100px" />
                            </td>

                            <td>
                                <button type="submit" class="btn btn-danger" style="margin-left:30%;margin-top:14%;" onclick="DeleteHotelImage(@item.ImageId)">Delete</button>
                            </td>
                        
                        </tr>
                        }

                    </tbody></table></div></div></div><script>
       function DeleteHotelImage(Id) {
           var status = confirm("Are you sure to delete?");
           if (status == true) {
               $.ajax({
                   type: "GET",
                   url: "/Gallery/DeleteHotelImage?ImageId=" + Id,
               }
               );
               location.reload();
           }
       }
   </script>